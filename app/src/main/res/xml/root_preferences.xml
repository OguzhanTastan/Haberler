<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/text_setting">


        <ListPreference
            app:defaultValue="Medium"
            app:entries="@array/TextSize"
            app:entryValues="@array/TextSize"
            app:key="text_size"
            app:title="@string/text_setting"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Default"
            app:entries="@array/TextColor"
            app:entryValues="@array/TextColor"
            app:key="text_color"
            app:title="@string/text_color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notification">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notification"
            app:title="@string/notification" />


    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
